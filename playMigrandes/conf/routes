# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#--------------------------------DOCTOR----------------------------------------------------------------------------
#Crear Doctor
POST    /doctor               controllers.DoctorController.create()

#Ver doctor
#GET     /doctor/:id

#eliminar Doctor
#DELETE /doctor/:id


#-------------------------------PACIENTE-----------------------------------------------------------

#Crear Paciente
POST		/paciente/new							              controllers.PacienteController.create()

#Ver Paciente
#GET			/paciente/:id						              controllers.PacienteController.getPaciente(id: Long)

#Eliminar Paciente
#DELETE		/paciente/:id                                        controllers.PacienteController.deletePaceinte(id :Long)

#Ver un episodio de un paciente
#GET 		/paciente/episodio/:idp/ide		                        controlllers.PacienteController.verEpisodioPaciente(idp: Long, ide:Long)

#Ver revisar un episodio completo
GET         /paciente/episodioCompleto/:id                        controllers.PacienteControler.verEpisodioCompleto(id: Long)	

#Ver todos los episodios de un paciente
GET			/paciente/getAllEpisodios				              controllers.PacienteController.verEpisodiosPaciente(id: Long)


#Ver episodios en fecha
GET 	    /paciente/getEpisodios/:idp/fecha?<filters>           Controllers.PacienteController.verEpisodiosPacienteFecha(idp: Long, fechaIn: String,fechaFin: String)

#Grabar nota de Voz
#POST       /NotaVoz/new                                          Controllers.NotaVozController.create()